<!-- Loop over each object in the blogPosts array -->
{{#each blogPosts as |blogPost| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            {{{get_emoji}}}
            <a href="/blogpost/{{blogPost.id}}">{{blogPost.title}}</a>
        </h2>

        <p>Created by {{blogPost.user.name}} on {{format_date blogPost.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{blogPost.description}}
        </p>
    </div>
</div>
{{/each}}